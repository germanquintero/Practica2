<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="350dp"
        android:layout_weight="1">
        
                <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="#fffffb3e"
                    android:layout_weight="2.49"
                    android:orientation="horizontal"
                    >
                </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="#ff0daa05"
                        android:layout_weight="2.68"
                        android:orientation="horizontal"
                        >
                    </LinearLayout>

    </LinearLayout>




    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:weightSum="1">
                       <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="90dp"
                            android:layout_height="match_parent"
                           android:background="#ffaa030e">

                        </LinearLayout>

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="96dp"
                                android:layout_height="fill_parent">

                                <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_width="match_parent"
                                    android:layout_height="200dp"
                                    android:background="#ff1b3aaa">

                                </LinearLayout>


                                <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_width="170dp"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="right"></LinearLayout>

                                <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="#fffffb3e"
                                    >

                                </LinearLayout>

                            </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#ffff63cb"
                >

                </LinearLayout>


    </LinearLayout>


</LinearLayout>